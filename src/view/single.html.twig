{% extends "base.html.twig" %}

{% block heading %}
	{{ post.title }}
{% endblock %}

{% block content %}
	<div class="row d-flex justify-content-center">
		<div class="col-8">
			<div class="row">
				<div class="col-12 mb-4">
					<img class="img-fluid mx-auto d-block" src="{{ post.link }}" alt="image">
				</div>
				<div class="col-12">{{ post.description }}</div>
			</div>
		</div>
	</div>
{% endblock %}
